<link rel="stylesheet" type="text/css" href="/assets/home.css">
<div class="container">
  <div class="row">
    <div class="col-lg-7 col-md-7 col-sm-12 col-xs-12">
      <img class="img-responsive" src="/assets/pareeksha-manch-login.jpg">
    </div>
    <div class="col-lg-5 col-md-5 col-sm-12 col-xs-12">
      <div class="authform">
        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
          <h3>Welcome to Pareeksha Manch</h3>
          <p>Please login to access your account</p>
          <%= devise_error_messages! %>
          <div class="form-group">
            <%= f.email_field :email, :autofocus => true, class: 'form-control', :placeholder =>'Email Address' %>
          </div>
          <div class="form-group">
            <%- if devise_mapping.recoverable? %>
              <%= link_to "Forgot password?", new_password_path(resource_name), class: 'right' %>
            <% end -%>
            <%= f.password_field :password, class: 'form-control', :placeholder =>'Password' %>
          </div>
          <div class="form-group">
              <div class="row vertical-center">
                <div class="col-lg-7 col-md-7 col-sm-12 col-xs-12">
                  <%= f.submit 'Sign in', :class => 'button btn btn-primary login-btn' %>
                  <%= link_to 'Sign up', new_registration_path(resource_name)  %>
                  </div>
                </div>
              </div>
            </div>

          
          <% if devise_mapping.rememberable? -%>
              <div class="checkbox" style="width:150px">
                <label>
                  <%= f.check_box :remember_me %> Remember me
                </label>
              </div>
            <% end -%>
        <% end %>
      </div>
    </div>
  </div>
</div>
