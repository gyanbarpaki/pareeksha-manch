<p id="notice"><%= notice %></p>
<h1>Questions</h1>

<table>
  <thead>
    <tr>
      <th>Question</th>
      <th>Option 1</th>
      <th>Option 2</th>
      <th>Option 3</th>
      <th>Option 4</th>
      <th>Solution</th>
      <th>Type</th>
      <th>Difficulty</th>
      <th>Subject</th>
      <th>Chapter</th>
      <th>Topic</th>
      <th>Sub Topic</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.content %></td>
        <td><%= question.option1 %></td>
        <td><%= question.option2 %></td>
        <td><%= question.option3 %></td>
        <td><%= question.option4 %></td>
        <td><%= question.solution %></td>
        <td><%= question.qns_type %></td>
        <td><%= question.difficulty %></td>
        <td><%= question.subject.nil? ? '' : question.subject.name %></td>
        <td><%= question.chapter.nil? ? '' : question.chapter.name %></td>
        <td><%= question.topic.nil? ? '' : question.topic.name %></td>
        <td><%= question.sub_topic.nil? ? '' : question.sub_topic.name %></td>
        <td><%= link_to 'Show', question %></td>
        <td><%= link_to 'Edit', edit_question_path(question) %></td>
        <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

